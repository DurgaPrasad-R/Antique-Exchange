<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>category</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,400;12..96,800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/style.css">
    <style>
        .category-items-list{
            list-style: none;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin: 0 5vmin;
        }

        .card {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 10px;
        margin: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s;
        background-color: #fff;
        width: 200px;
        height: 300px;
        }

        .containerImage img{
            width: 100%;
        }

        .card:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .card-image {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        }

        .card-details {
        padding: 10px;
        }

        .card-details a{
            color: #000;
        }

        .card-title {
        font-size: 18px;
        font-weight: bold;
        margin: 0;
        }

        .card-price {
        font-size: 16px;
        color: #e91e63;
        margin: 0;
        }

        .card-description {
        font-size: 14px;
        margin: 0;
        }
    </style>
</head>
<body>
    <%- include('header',{globalCategories: globalCategories}); -%>
    <div class="category-items">
        <% if (typeof categoryItems !== 'undefined' && categoryItems.length > 0) { %>
            <ul class="category-items-list">
                <% categoryItems.forEach((item) => { %>
                    <li class="category-item">
                        <div class="card">
                            <div class="containerImage">
                                <a href="/item/<%= item.SellerCategory %>/<%= item.SellerItemName %>">
                                    <img class="category-item-image" src="<%= item.SellerItemImage %>" alt="Item Image">
                                </a>
                            </div>
                            <div class="card-details">
                                <a href="/item/<%= item.SellerCategory %>/<%= item.SellerItemName %>">
                                    <h3 class="category-item-name"><%= item.SellerItemName %></h3>
                                    <h3 class="category-item-price">â‚¹<%= item.SellerItemPrice %></h3>
                                    <p class="category-item-Description"><%= item.SellerItemDescription %></p>
                                </a>
                            </div>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No items found in this category.</p>
        <% } %>
    </div>
</body>
</html>