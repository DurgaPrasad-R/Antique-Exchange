<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>category</title>
    <link rel="stylesheet" href="../assets/css/style.css">
    <style>
        .category-items-list {
            display: grid;
            grid-template-columns: repeat(4, 1fr); /* Create 4 columns */
            gap: 20px; /* Adjust the gap between items as needed */
        }

        .category-item {
            text-align: center; /* Center the content within each item */
        }

        /* Add any additional styling for images, price, and description here */
        .category-item-image {
            max-width: 100%; /* Ensure images don't exceed their container width */
        }
    </style>
</head>
<body>
    <%- include('header'); -%>
    <!-- Display categoryItems -->
    <div class="category-items">
        <!-- Check if categoryItems object is not empty before rendering the section -->
        <% if (typeof categoryItems !== 'undefined' && categoryItems.length > 0) { %>
            <!-- <h2><%= categoryItems[0].SellerCategory %></h2> -->
            <ul class="category-items-list">
                <% categoryItems.forEach((item) => { %>
                    <li class="category-item">
                        <!-- Display item details, you can modify this as needed -->
                        <div class="containerImage">
                            <a href="/item/<%= item.SellerCategory %>/<%= item.SellerItemName %>">
                                <img class="category-item-image" src="<%= item.SellerItemImage %>" alt="Item Image">
                            </a>
                        </div>
                        <h3 class="category-item-name"><%= item.SellerItemName %></h3>
                        <h3 class="category-item-price">â‚¹<%= item.SellerItemPrice %></h3>
                        <p class="category-item-Description"><%= item.SellerItemDescription %></p>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No items found in this category.</p>
        <% } %>
    </div>

    <footer></footer>
</body>
</html>