<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,400;12..96,800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <%- include('header',{globalCategories:globalCategories}); -%>
    <div class="item-details">
        <!-- Check if itemDetails object is not empty before rendering the section -->
        <% if (typeof itemDetails !== 'undefined') { %>
            <div class="item-details-content">
                <div class="itemDetailImage">
                    <div class="item-details-image">
                        <img src="<%= itemDetails.SellerItemImage %>" alt="Item Image">
                    </div>
                    <div class="itemContent">
                        <h2><%= itemDetails.SellerItemName %></h2>
                        <h3>Price: â‚¹<%= itemDetails.SellerItemPrice %></h3>
                        <p>Description: <%= itemDetails.SellerItemDescription %></p>
                    </div>
                </div>
                <!-- Add any other item details you want to display here -->
            </div>
            <div class="order-form">
                <form action="">
                    <div class="Days">
                        <label for="ndays">No. of days</label><br>
                        <input type="number" name="NDays" id="ndays" required>
                    </div>
                    <div class="Fname">
                        <label for="fname">Full Name (First and Last)</label><br>
                        <input type="text" name="FullName" id="fname">
                    </div>
                    <div class="Mobile">
                        <label for="mobile">Mobile Number</label><br>
                        <input type="text" name="Mobile" id="mobile" required>
                    </div>
                    <div class="Pincode">
                        <label for="pincode">Pincode</label><br>
                        <input type="number" name="Pincode" id="pincode" required>
                    </div>
                    <div class="flat">
                        <label for="dno">House No./Flat No.</label><br>
                        <input type="number" name="Flat" id="dno">
                    </div>
                    <div class="area">
                        <label for="street">Area,Street,Village</label><br>
                        <input type="text" name="Street" id="street" required>
                    </div>
                    <div class="lmark">
                        <label for="landmark">Landmark</label><br>
                        <input type="text" name="Landmark" id="landmark" required>
                    </div>
                    <div class="Place">
                        <div class="city">
                            <label for="town">Town/City</label><br>
                            <input type="text" name="Town/City" id="town" required>
                        </div>
                        <div class="STATE">
                            <label for="state">State</label><br>
                            <input type="text" name="State" id="state"required>
                        </div>
                    </div>
                    <div class="msg">Currently we prefer Cash On Delivery</div>
                    <div class="buttons">
                        <button class="addToBag" onclick="AddToBag()">Add to Bag</button><br>
                        <button class="placeOrder" onclick="">Place Order</button>
                    </div>
                </form>
            </div>
        <% } else { %>
            <p>Item details not found.</p>
        <% } %>
    </div>
    <script>
        // function AddToBag(){

        }
    </script>
</body>
</html>