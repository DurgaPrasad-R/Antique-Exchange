<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Antique Exchange</title>
    <link rel="shortcut icon" href="/assets/images/antique_icon.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,400;12..96,800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <%- include('header',{globalCategories: globalCategories}); -%>
    <%- include('section'); -%>
    <!-- Display sellerItems -->
    <div class="seller-items-container">
        <!-- Check if sellerItems object is not empty before rendering the section -->
        <% if (typeof sellerItems !== 'undefined' && Object.keys(sellerItems).length > 0) { %>
            <h2>New Arrivals</h2>
            <% for (const category in sellerItems) { %>
                <h3><%= category %></h3>
                <ul class="seller-items-list">
                    <% const categoryItems = sellerItems[category]; %>
                    <% for (let i = 0; i < Math.min(categoryItems.length,5); i++) { %>
                        <li class="seller-items">
                            <!-- Display item details, you can modify this as needed -->
                            <div class="sellerimage"><img class="seller-item-image" src="<%= categoryItems[i].SellerItemImage %>" alt="Item Image"></div>
                            <h3 class="seller-item-name"><%= categoryItems[i].SellerItemName %></h3>
                            <p class="seller-item-price">MRP: ₹<%= categoryItems[i].SellerItemPrice %><span class="randomPrice">₹1500</span></p>
                        </li>
                        <!-- Add a "View More" button at the end of each category -->
                        <% if (i === Math.min(categoryItems.length,4)) { %>
                            <div class="vmbtn"><a class="view-more-button" href="/category/<%= category %>">View More</a></div>
                        <% } %>
                    <% } %>
                </ul>
            <% } %>
        <% } %>
    </div>
    <footer>
        &copy; Copyrights reserved. This is a platform where people can rent or let others rent items for special occassions or events.
        <div class="contact">
            <p>Contact us: <button onclick="sendEmail()">Email</button></p>
        </div>
    </footer>
    <script type="text/javascript">
        function sendEmail() {
            const emailAddress = 'antiqueexchangea@gmail.com';

            const mailtoLink = `mailto:${emailAddress}`;
            window.location.href = mailtoLink;
        }
    </script>
</body>
</html>